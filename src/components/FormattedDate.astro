---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-au', {
			dateStyle: "long",
			timeZone: "Australia/Perth"
		}) + ', ' + date.toLocaleTimeString('en-au', {
			timeStyle: "short",
			timeZone: "Australia/Perth"
		})
		+ ' UTC+8'
	}
</time>
